{
	"name": "Ubuntu with UV",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "bash .devcontainer/commands/post-create-command.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"ms-python.mypy-type-checker",
				"ms-python.debugpy",
				"ms-python.vscode-python-envs",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"github.vscode-github-actions"
			]
		}
	},
	"remoteEnv": {
		"UV_LINK_MODE": "copy"
	}
}